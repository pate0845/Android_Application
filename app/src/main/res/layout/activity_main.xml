<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="2"
    android:backgroundTint="@color/Red"
    >

    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32dp"
        android:paddingBottom="20dp"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:text="Select Your App"
        android:textColor="@color/Brown"
        android:textStyle="bold"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/butnCar"
                android:drawableTop="@drawable/car"
                android:layout_width="0dp"
                android:background="@android:color/transparent"
                android:layout_height="fill_parent"
                android:text="@string/car"
                android:layout_weight="1"

                />


            <Button
                android:id="@+id/butnSoccer"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/soccer"
                android:text="@string/soccer" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/butnSongster"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/music"
                android:text="@string/Songster"

                />

            <Button
                android:id="@+id/butnTrivia"
                android:drawableTop="@drawable/trivia"
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:text="@string/Trivia"
                android:layout_height="312dp"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>
</GridLayout>











